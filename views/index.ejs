<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main h-screen w-full bg-zinc-900">
        <div class="prt1 p-5">
            <form action="/create" method="post">
                <input class="title w-full rounded-md px-5 py-2 bg-zinc-600 mt-5" type="text" placeholder="Plz Write Down Here Title" name="title">
                <input class="details w-full rounded-md px-5 py-2 bg-zinc-600 mt-5" type="text" placeholder="Plz Write Down Here Details" name="details">
                <input class="px-5 py-2 bg-blue-600 rounded-md mt-5 w-32 text-white" type="submit" value="Create Task">
            </form>
        </div>

        <div class="prt2 p-5 text-white flex flex-wrap gap-10 ">
        <% if(files.length > 0 ){%>
          <%  files.forEach(function(val){ %>
                    <div class="task min-w-72 bg-zinc-600 rounded-md">
                        <h1 class="px-5 py-2 text-2xl"><%= val%></h1>
                        <div class="div flex flex-between mt-5 ">
                            <a class="inline-block  px-5 py-2 text-blue-600 text-xl" href="/file/<%= val %>">read more</a>
                            <a class="inline-block  px-5 py-2 text-yellow-600 text-xl" href="/edit/<%= val %>">edit filename</a>
                        </div>
                       
                    </div>
               
           <% })%>

        <%} else{%>
            <h1 class="px-5 py-2 text-white">no task yet</h1>
        <%}%>
    </div>
    </div>
</body>
</html>